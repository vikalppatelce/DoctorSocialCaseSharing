<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/editorPannel"
    android:layout_width="fill_parent"
    android:layout_height="70dip"
    android:layout_marginTop="10dip"
    android:background="#00000000"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="6dip"
    android:paddingRight="6dip" >

    <TextView
        android:id="@+id/txtLovValue"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/btnRemoveLOV"
        android:ellipsize="marquee"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="izharkhanart@gmail.com"
        android:textColor="@color/blue_btn_bg"
        android:textSize="20sp" >
    </TextView>

    <Button
        android:id="@+id/btnRemoveLOV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/minus_bg"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:orientation="horizontal" />

</RelativeLayout>