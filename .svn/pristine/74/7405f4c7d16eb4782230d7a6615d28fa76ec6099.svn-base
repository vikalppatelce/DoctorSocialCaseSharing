	@Override
	protected void onActivityResult(int arg0, int arg1, Intent arg2) {
		// TODO Auto-generated method stub
		super.onActivityResult(arg0, arg1, arg2);
		String currentSelection = null;
		if(arg2 != null)
		{
			currentSelection = arg2.getStringExtra("data");
		}
		if(arg1 == RESULT_OK && currentSelection != null)
		{
			switch(arg0)
			{
				case 100:
					location = currentSelection;
					break;
				case 101: // location
					startTime = currentSelection;
					break;
				case 103: // location
					procedure = currentSelection;
					break;
				case 104: // location
					ward = currentSelection;
					break;
				case 105: // location
					teamMember = currentSelection;
					break;
				case 102:
					level = currentSelection;
					break;
				case 106:
					type = currentSelection;
					break;
				case 107:
					ref = currentSelection;
					break;
			}
			clearDataStructure();
			onDataLoaded(currentSelection);
			//LocationTask locationTask = new LocationTask();
			//locationTask.execute();
		}
	}
