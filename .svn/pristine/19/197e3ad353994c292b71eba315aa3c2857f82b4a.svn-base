<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:gravity="center"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btnStartSyncing"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/rect_shape"
        android:focusable="true"
        android:gravity="center"
        android:onClick="onStartSyncClick"
        android:orientation="horizontal"
        android:text="Start Syncing"
        android:textColor="#ffffff"
        android:textSize="20dip" />

    <Button
        android:id="@+id/btnStartManaging"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/rect_shape"
        android:focusable="true"
        android:gravity="center"
        android:onClick="onManageLOVClick"
        android:orientation="horizontal"
        android:text="Manage Lists"
        android:textColor="#ffffff"
        android:textSize="20dip" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
         >


       <Button
            android:id="@+id/fullScreenSwitch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:textColor="#ffffff"
            android:background="@drawable/rect_shape"
            android:textSize="20dip"
            android:text="FullScreen"
            android:onClick="setFullScreenMode"
            
             />

    </LinearLayout>

</LinearLayout>