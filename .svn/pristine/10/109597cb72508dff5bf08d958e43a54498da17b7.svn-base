<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_screen"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:paddingBottom="6dip"
    android:paddingLeft="15dip"
    android:paddingRight="15dip"
    android:paddingTop="6dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:layout_marginBottom="10dip"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="4dip" >

            <AutoCompleteTextView
                android:id="@+id/search_text"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_marginTop="4dip"
                android:background="@drawable/edt_bg"
                android:drawableRight="@drawable/search"
                android:hint="Name"
                android:inputType="textCapWords"
                android:paddingLeft="10dp"
                android:paddingRight="12dp"
                android:singleLine="true"
                android:textColorHint="#bebebe"
                android:typeface="normal" >
            </AutoCompleteTextView>

            <ImageView
                android:id="@+id/btn_search"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@android:drawable/ic_delete"
                android:textColor="#25587E"
                android:visibility="visible" >
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="10dip"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dip"
                android:layout_weight="1"
                android:background="@drawable/grey_rect_shape"
                android:onClick="onAddSXClick"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.3"
                    android:focusable="false"
                    android:paddingTop="0dip"
                    android:scaleType="fitCenter"
                    android:src="@drawable/surgery" >
                </ImageView>

                <LinearLayout
                    android:id="@+id/LinearLayout01"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="2dip"
                    android:layout_weight="0.7"
                    android:focusable="false"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="6dip"
                    android:paddingRight="6dip" >

                    <ImageView
                        android:id="@+id/ImageView02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:src="@drawable/add_sx_icon" >
                    </ImageView>

                    <TextView
                        android:id="@+id/seperator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:paddingLeft="6dip"
                        android:text="Add SX"
                        android:textColor="@color/blue_btn_bg"
                        android:textStyle="bold" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:background="@drawable/grey_rect_shape"
                android:onClick="onRecordSXClick"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.3"
                    android:focusable="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/surgery" >
                </ImageView>

                <LinearLayout
                    android:id="@+id/LinearLayout01"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="2dip"
                    android:layout_weight="0.7"
                    android:focusable="false"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="6dip"
                    android:paddingRight="6dip" >

                    <ImageView
                        android:id="@+id/ImageView02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:src="@drawable/recored_blue_icon" >
                    </ImageView>

                    <TextView
                        android:id="@+id/seperator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:paddingLeft="6dip"
                        android:text="Record SX"
                        android:textColor="@color/blue_btn_bg"
                        android:textStyle="bold" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="10dip"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dip"
                android:layout_weight="1"
                android:background="@drawable/grey_rect_shape"
                android:onClick="onAddIPDClick"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.3"
                    android:focusable="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ipd_icon" >
                </ImageView>

                <LinearLayout
                    android:id="@+id/LinearLayout01"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="6dip"
                    android:layout_weight="0.7"
                    android:focusable="false"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="6dip"
                    android:paddingRight="6dip" >

                    <ImageView
                        android:id="@+id/ImageView02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:src="@drawable/add_sx_icon" >
                    </ImageView>

                    <TextView
                        android:id="@+id/seperator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:paddingLeft="6dip"
                        android:text="Add IPD"
                        android:textColor="@color/blue_btn_bg"
                        android:textStyle="bold" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:background="@drawable/grey_rect_shape"
                android:onClick="onRecordIPDClick"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.3"
                    android:focusable="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ipd_icon" >
                </ImageView>

                <LinearLayout
                    android:id="@+id/LinearLayout01"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="6dip"
                    android:layout_weight="0.7"
                    android:focusable="false"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="6dip"
                    android:paddingRight="6dip" >

                    <ImageView
                        android:id="@+id/ImageView02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:src="@drawable/recored_blue_icon" >
                    </ImageView>

                    <TextView
                        android:id="@+id/seperator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:paddingLeft="6dip"
                        android:text="Record IPD"
                        android:textColor="@color/blue_btn_bg"
                        android:textStyle="bold" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="10dip"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dip"
                android:layout_weight="1"
                android:background="@drawable/grey_rect_shape"
                android:onClick="onAddOPDClick"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.3"
                    android:focusable="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/opd_icon" >
                </ImageView>

                <LinearLayout
                    android:id="@+id/LinearLayout01"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="6dip"
                    android:layout_weight="0.7"
                    android:focusable="false"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="6dip"
                    android:paddingRight="6dip" >

                    <ImageView
                        android:id="@+id/ImageView02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:src="@drawable/add_sx_icon" >
                    </ImageView>

                    <TextView
                        android:id="@+id/seperator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:paddingLeft="6dip"
                        android:text="Add OPD"
                        android:textColor="@color/blue_btn_bg"
                        android:textStyle="bold" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:background="@drawable/grey_rect_shape"
                android:onClick="onRecordOPDClick"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.3"
                    android:focusable="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/opd_icon" >
                </ImageView>

                <LinearLayout
                    android:id="@+id/LinearLayout01"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="6dip"
                    android:layout_weight="0.7"
                    android:focusable="false"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="6dip"
                    android:paddingRight="6dip" >

                    <ImageView
                        android:id="@+id/ImageView02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:src="@drawable/recored_blue_icon" >
                    </ImageView>

                    <TextView
                        android:id="@+id/seperator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:paddingLeft="6dip"
                        android:text="Record OPD"
                        android:textColor="@color/blue_btn_bg"
                        android:textStyle="bold" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="10dip"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dip"
                android:layout_weight="1"
                android:background="@drawable/grey_rect_shape"
                android:onClick="onSetupClick"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="0.3"
                    android:focusable="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/setting" >
                </ImageView>

                <LinearLayout
                    android:id="@id/LinearLayout01"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="6dip"
                    android:layout_weight="0.7"
                    android:focusable="false"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="6dip"
                    android:paddingRight="6dip" >
                    <LinearLayout
                        android:id="@id/LinearLayout01"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="6dip"
                        android:focusable="false"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_marginBottom="3dip"
                         >
                        <ImageView
                            android:id="@id/ImageView02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="TODO"
                            android:focusable="false"
                            android:src="@drawable/add_sx_icon" >
                        </ImageView>

                        <TextView
                            android:id="@id/seperator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:paddingLeft="6dip"
                            android:text="@string/add_payment"
                            android:textColor="@color/blue_btn_bg"
                            android:textStyle="bold" >
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:background="@drawable/grey_rect_shape"
                android:onClick="onExpensesClick"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="0.3"
                    android:focusable="false"
                    android:scaleType="fitCenter"
                    android:src="@drawable/curr" >
                </ImageView>

                <LinearLayout
                    android:id="@+id/LinearLayout01"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="6dip"
                    android:layout_weight="0.7"
                    android:focusable="false"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="6dip"
                    android:paddingRight="6dip" >

                    <TextView
                        android:id="@+id/seperator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:paddingLeft="6dip"
                        android:text="Expenses"
                        android:textColor="@color/blue_btn_bg"
                        android:textStyle="bold" >
                    </TextView>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>