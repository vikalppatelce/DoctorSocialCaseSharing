		private void initSummary(Preference p) {
	        if (p instanceof PreferenceCategory) {
	            PreferenceCategory pCat = (PreferenceCategory) p;
	            for (int i = 0; i < pCat.getPreferenceCount(); i++) {
	                initSummary(pCat.getPreference(i));
	            }
	        } else {
	            updatePrefSummary(p);
	        }
	    }
		
