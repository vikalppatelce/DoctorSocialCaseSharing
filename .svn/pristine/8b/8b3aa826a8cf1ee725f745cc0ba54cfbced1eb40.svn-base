                    android:orientation="horizontal"
                    android:paddingLeft="6dip"
                    android:paddingRight="6dip" >

                    <ImageView
                        android:id="@+id/db1_img_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        >
                    </ImageView>

